{% if languages|length > 1 %}
<div class="dropdown">
  <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-language">
    {% for language in languages %}
      {% if language.code == code %} 
        <button type="button" id="dropdownMenuButton-3" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <img src="catalog/language/{{ language.code }}/{{ language.code }}.png" alt="" /> {{ language.name }} <i class="ion-ios-arrow-down"></i>
        </button>
      {% endif %}
    {% endfor %}
    <ul class="dropdown-menu animation slideDownIn" aria-labelledby="dropdownMenuButton-3">
      {% for language in languages %}
      <li>
        <a href="#" class="" name="{{ language.code }}">
          <img src="catalog/language/{{ language.code }}/{{ language.code }}.png" alt="" /> {{ language.name }}
        </a>
      </li>
      {% endfor %}
    </ul>
    <input type="hidden" name="code" value="" />
    <input type="hidden" name="redirect" value="{{ redirect }}" />
  </form>
</div>
{% endif %}

